<%- include('partials/header') %>

<body>
    <div class="container w-75 text-center">
        <h1 class="my-3">Hello, <%= username %></h1>
        <form action="/logout" method="post">
            <button type="submit" class="btn btn-danger mb-3">Logout</button>
        </form>
        <form action="/files" method="post" enctype="multipart/form-data" class="p-3 mb-16">
            <h2>Upload files</h2>
            <div class="input-group mb-3">
                <input type="file" class="form-control" name="file" id="fileinput" multiple required>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
        <form action="/search" class="mt-5 p-3" method="get">
            <h2>Search for files</h2>
            <div class="input-group mb-3">
                <input type="text" class="form-control" name="keyword" required>
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>


        <% if (locals.result) { %>
        <% if (result.length === 0) { %>
        <h4 class="text-muted">No files found.</h4>
        <% } %>
        <div class="card">
            <ul class="list-group list-group-flush">

                <% result.forEach(element => { %>
                <li class="list-group-item d-flex flex-row justify-content-between">
                    <h4><%= element.filename %></h4>
                    <a href="/download/<%= element.fileid %>" class="btn btn-dark">Download</a>
                </li>
                <% }) %>

            </ul>
        </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    
<%- include('partials/footer') %>